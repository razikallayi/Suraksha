<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_selector"
    android:focusable="true"
    >

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testName"
        android:layout_toEndOf="@id/avatar"
        android:layout_alignTop="@id/avatar"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginRight="@dimen/spacing_small"
        android:maxLines="1"
        android:textColor="@android:color/primary_text_light"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="testPlace,testLocation"
        android:layout_alignLeft="@id/name"
        android:layout_below="@id/name"
        android:layout_marginRight="@dimen/spacing_extra_huge"
        android:layout_marginTop="2dp"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="@dimen/font_small"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"/>

    <View
        android:id="@+id/member_list_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSeparatorLine"
        android:layout_marginStart="76dp"
        android:layout_below="@id/avatar"/>

    <TextView
        android:id="@+id/lblAccountNumber"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/spacing_very_tiny"
        android:background="@drawable/ic_circle"
        android:textStyle="bold"
        android:textSize="@dimen/font_medium"
        android:fontFamily="sans-serif-black"
        android:text="112"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <!--<LinearLayout-->
        <!--android:id="@+id/llAccountNumbers"-->
