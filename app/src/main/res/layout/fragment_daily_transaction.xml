<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <TextView
        android:id="@+id/txnDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Transactions"
        android:fontFamily="sans-serif-condensed"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Deposit"
        android:id="@+id/lblDeposit"
        android:fontFamily="sans-serif-condensed"
        android:layout_below="@+id/txnDate"
        android:layout_margin="@dimen/text_margin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/deposit_count"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txnDate"
        android:layout_margin="@dimen/text_margin"
        android:text="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tv_deposit_amount"
        android:layout_margin="@dimen/text_margin"
        android:layout_below="@+id/txnDate"
        android:layout_alignParentEnd="true"
        android:text="5000" />

    <TextView
        android:id="@+id/lblRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Registration"
        android:layout_below="@id/lblDeposit"
        android:layout_margin="@dimen/text_margin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/registration_count"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lblDeposit"
        android:layout_margin="@dimen/text_margin"
        android:text="10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/registration_amount"
        android:layout_below="@+id/lblDeposit"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/text_margin"
        android:text="2500" />

    <TextView
        android:id="@+id/lblLoanPayed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Loan Payed"
        android:layout_below="@id/lblRegistration"
        android:layout_margin="@dimen/text_margin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_margin="@dimen/text_margin"
        android:layout_below="@id/lblRegistration"
        android:layout_centerHorizontal="true"
        android:text="1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/lblRegistration"
        android:layout_margin="@dimen/text_margin"
        android:layout_alignParentEnd="true"
        android:text="20000" />

    <TextView
        android:id="@+id/lblLoanReturn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/lblLoanPayed"
        android:text="Loan Return"
        android:layout_margin="@dimen/text_margin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_below="@id/lblLoanPayed"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/text_margin"
        android:text="4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_margin="@dimen/text_margin"
        android:layout_below="@id/lblLoanPayed"
        android:layout_alignParentEnd="true"
        android:text="8000" />

</RelativeLayout>
