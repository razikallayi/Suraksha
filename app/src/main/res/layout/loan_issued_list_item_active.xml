<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardVIewLoanIssuedItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/maroon_dull">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_selector"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_huge"
            android:paddingEnd="@dimen/spacing_large"
            android:paddingStart="@dimen/spacing_large"
            android:paddingTop="@dimen/spacing_huge">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="sans-serif-black"
                android:text="ACTIVE LOAN"
                android:textColor="@color/white"
                android:gravity="end"
                android:textSize="@dimen/font_small" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:textAlignment="center">

                <TextView
                    android:id="@+id/issued_date_loan_issue_item"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-black"
                    android:gravity="start|center_vertical"
                    android:text="March 2016"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/font_large" />

                <TextView
                    android:id="@+id/amountLoanIssueItem"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="end|center_vertical"
                    android:text="10000"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/font_larger" />
            </LinearLayout>

            <TextView
                android:id="@+id/guarantorNameLoanIssueItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="Mohammed Razi"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal" />

            <TextView
                android:id="@+id/officer_loan_issue_item"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="SYS"
                android:textSize="@dimen/font_smaller" />

            <TextView
                android:id="@+id/purpose_loan_issue_item"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="To buy a new samsung galaxy s4 mini."
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/office_statement_loan_issue_item"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="MashaAllah, Let him buy his new phone."
                android:textSize="@dimen/font_medium" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>