            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cvLoanReturnDueAMF"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_tiny"
                    android:layout_weight="1"

                    card_view:cardCornerRadius="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/spacing_tiny">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Loan Return" />

                            <TextView
                                android:id="@+id/lblLoanInstalmentTimeAMF"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="end"
                                android:text="Instalment" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/lblLoanReturnAmountAMF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-condensed-light"
                            android:text="1000"
                            android:textSize="@dimen/font_larger" />

                        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/cvLoanReturnAMF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_margin="@dimen/spacing_small"
                            card_view:cardBackgroundColor="@color/blueGrayLight"
                            card_view:cardCornerRadius="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:paddingBottom="@dimen/spacing_very_tiny"
                                android:paddingEnd="@dimen/spacing_small"
                                android:paddingStart="@dimen/spacing_small"
                                android:paddingTop="@dimen/spacing_very_tiny"
                                android:text="Loan Return"
                                android:textSize="@dimen/font_small" />
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cvDepositDueAMF"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_tiny"
                    android:layout_weight="1"

                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="@dimen/spacing_tiny">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Deposit" />

                            <TextView
                                android:id="@+id/lblDepositMonthAMF"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="sans-serif"
                                android:gravity="end"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/lblDepositAmountAMF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="sans-serif-condensed-light"
                            android:text="1000"
                            android:textSize="@dimen/font_larger" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remarks : "
                            android:textSize="@dimen/font_smaller"
                            android:textStyle="bold|italic" />

                        <LinearLayout
                            android:id="@+id/remark_dialog_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/remarksEditText"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:contentDescription="Remarks"
                                android:inputType="textMultiLine" />


                            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/cvDepositAMF"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"
                                android:layout_margin="@dimen/spacing_tiny"
                                card_view:cardBackgroundColor="@color/blueGrayLight"
                                card_view:cardCornerRadius="2dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:paddingBottom="@dimen/spacing_very_tiny"
                                    android:paddingEnd="@dimen/spacing_small"
                                    android:paddingStart="@dimen/spacing_small"
                                    android:paddingTop="@dimen/spacing_very_tiny"
                                    android:text="Make Deosit"
                                    android:textSize="@dimen/font_small" />
                            </android.support.v7.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/loanIssuedCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_weight="1"

                card_view:cardCornerRadius="0dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="@dimen/spacing_tiny">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loan Issued"
                    android:textColor="@color/gray" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/loanIssuedList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_small"
                    app:layoutManager="GridLayoutManager"

                    tools:context=".account.AccountManipulationsFragment"
                    tools:listitem="@layout/loan_issued_list_item" />

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>