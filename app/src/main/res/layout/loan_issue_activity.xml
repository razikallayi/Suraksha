<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/LoanIssueForm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgAvatarMemberLoanIssue"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerVertical="true"
                    android:contentDescription="Member Image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_account_circle_black_48dp" />

                <TextView
                    android:id="@+id/lblMemberNameLoanIssue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="52dp"
                    android:layout_marginRight="70dp"
                    android:ellipsize="marquee"
                    android:fontFamily="sans-serif-thin"
                    android:maxLines="1"
                    android:text="Name"
                    android:textSize="@dimen/font_larger" />

                <TextView
                    android:id="@+id/lblAddressLoanIssue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/lblMemberNameLoanIssue"
                    android:layout_below="@id/lblMemberNameLoanIssue"
                    android:layout_marginRight="70dp"
                    android:ellipsize="marquee"
                    android:fontFamily="sans-serif-thin"
                    android:maxLines="1"
                    android:text="Mobile/Address"
                    android:textSize="@dimen/font_normal" />

                <TextView
                    android:id="@+id/lblAccountNumberInLoanIssueTitle"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:text="123"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/font_huge" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/spacing_very_tiny"
                    android:layout_toStartOf="@id/lblAccountNumberInLoanIssueTitle"
                    android:background="@color/colorSeparatorLine" />
            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:hint="Loan Amount">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtAmountIssueLoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:maxLength="12" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/lblAmountInWordsLoanIssue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="@color/gray"
                android:layout_marginBottom="@dimen/spacing_tiny"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    style="@style/Suraksha.InputField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:hint="Instalment Times (Months)">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txtLoanInstalmentTimes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="3" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/Suraksha.InputField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:hint="Instalment Amount (Rupees/Month)">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txtLoanInstalmentAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="12" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Suraksha.InputField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Purpose of loan">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtPurposeIssueLoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    style="@style/Suraksha.InputField"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Security Member Name or Account number">

                    <AutoCompleteTextView
                        android:id="@+id/txtSecurityMemberName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords" />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/clearAutoComplete"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_circle"
                    android:padding="@dimen/spacing_extra_tiny"
                    android:src="@drawable/ic_close"
                    android:visibility="gone" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/Suraksha.InputField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Office Statements">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/txtOfficeStatement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/btnIssueLoan"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryLight"
                android:contentDescription="Issue Loan Button"
                android:focusable="true"
                android:text="Issue Loan" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>