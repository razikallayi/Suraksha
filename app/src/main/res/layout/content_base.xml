<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/app_bar_base">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llContentBase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- A CardView with a linear view inside-->
            <android.support.v7.widget.CardView
                android:id="@+id/statusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="3"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|start"
                            android:padding="10dp"
                            android:text="Registered members"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/tvActiveMembers"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|end"
                            android:padding="10dp"
                            android:text="test32"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="3"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|start"
                            android:padding="10dp"
                            android:text="Working Money Fund"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/tvWmf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|end"
                            android:padding="10dp"
                            android:text="test32"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|start"
                            android:padding="10dp"
                            android:text="Total Deposit"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/tvTotalDeposit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|end"
                            android:padding="10dp"
                            android:text="213132.0"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|start"
                            android:padding="10dp"
                            android:text="Total Loan Payed"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/tvTotalLoanPayed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|end"
                            android:padding="10dp"
                            android:text="213132.0"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|start"
                            android:padding="10dp"
                            android:text="Total Loan Return"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/tvTotalLoanReturn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|end"
                            android:padding="10dp"
                            android:text="213132.0"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/HomeCards">

                <TextView
                    android:id="@+id/members_fa_icon"
                    style="@style/HomeFAIcons"
                    android:text="@string/fa_ic_member_details"
                    android:textColor="@color/colorAccent" />

                <Button
                    android:id="@+id/btnMemberList"
                    style="@style/HomeButtons"
                    android:text="Members" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/HomeCards">

                <TextView
                    android:id="@+id/member_add_fa_icon"
                    style="@style/HomeFAIcons"
                    android:text="@string/fa_ic_member_add"
                    android:textColor="@color/colorAccent" />

                <Button
                    android:id="@+id/btnRegistration"
                    style="@style/HomeButtons"
                    android:text="Member Registration" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/HomeCards">

                <TextView
                    android:id="@+id/officer_fa_icon"
                    style="@style/HomeFAIcons"
                    android:text="@string/fa_ic_officer"
                    android:textColor="@color/colorAccent" />

                <Button
                    android:id="@+id/btnCreateOfficer"
                    style="@style/HomeButtons"
                    android:text="Create Officer" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/HomeCards">

                <TextView
                    android:id="@+id/reports_fa_icon"
                    style="@style/HomeFAIcons"
                    android:text="@string/fa_ic_reports"
                    android:textColor="@color/colorAccent" />

                <Button
                    android:id="@+id/btnTxnReport"
                    style="@style/HomeButtons"
                    android:text="Reports" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/HomeCards"
                android:visibility="gone">

                <TextView
                    android:id="@+id/debug_fa_icon"
                    style="@style/HomeFAIcons"
                    android:text="@string/fa_ic_debug"
                    android:textColor="@color/colorAccent" />

                <Button
                    android:id="@+id/btnDebug"
                    style="@style/HomeButtons"
                    android:text="Debug" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/HomeCards"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/lock_fa_icon"
                    style="@style/HomeFAIcons"
                    android:text="@string/fa_ic_lock"
                    android:textColor="@color/colorAccent" />

                <Button
                    android:id="@+id/btnLogout"
                    style="@style/HomeButtons"
                    android:text="Logout" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>