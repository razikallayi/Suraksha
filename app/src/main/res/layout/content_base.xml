<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    tools:showIn="@layout/app_bar_base">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llContentBase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- A CardView with a linear view inside-->
            <android.support.v7.widget.CardView
                android:id="@+id/statusCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="3"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|start"
                            android:padding="10dp"
                            android:text="Registered members"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/tvActiveMembers"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|end"
                            android:padding="10dp"
                            android:text="test32"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="3"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|start"
                            android:padding="10dp"
                            android:text="Working Money Fund"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/tvWmf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|end"
                            android:padding="10dp"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|start"
                            android:padding="10dp"
                            android:text="Total Deposit"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/tvTotalDeposit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|end"
                            android:padding="10dp"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|start"
                            android:padding="10dp"
                            android:text="Total Loan Payed"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/tvTotalLoanPayed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|end"
                            android:padding="10dp"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|start"
                            android:padding="10dp"
                            android:text="Total Loan Return"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <TextView
                            android:id="@+id/tvTotalLoanReturn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:accessibilityLiveRegion="polite"
                            android:fontFamily="sans-serif-condensed"
                            android:gravity="center|end"
                            android:padding="10dp"
                            android:textAppearance="?android:attr/textAppearanceMedium" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:columnCount="3"

                    tools:context="com.razikallayi.gecf.newsBeanLists.CategoryIconListFragment">

                    <LinearLayout
                        android:id="@+id/member_list_icon"
                        android:orientation="vertical"
                        android:padding="25dp">

                        <TextView
                            android:id="@+id/members_fa_icon"
                            style="@style/HomeIcons"
                            android:text="@string/md_ic_member_details" />

                        <TextView
                            style="@style/HomeIconText"
                            android:text="Members" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/member_add_icon"
                        android:orientation="vertical"
                        android:padding="25dp">

                        <TextView
                            android:id="@+id/member_add_fa_icon"
                            style="@style/HomeIcons"
                            android:text="@string/md_ic_member_add" />

                        <TextView
                            style="@style/HomeIconText"
                            android:text="Registration" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/officer_icon"
                        android:orientation="vertical"
                        android:padding="25dp">

                        <TextView
                            android:id="@+id/officer_fa_icon"
                            style="@style/HomeIcons"
                            android:text="@string/md_ic_officer" />

                        <TextView
                            style="@style/HomeIconText"
                            android:text="@string/title_officer_list" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/reports_icon"
                        android:orientation="vertical"
                        android:padding="25dp">

                        <TextView
                            android:id="@+id/reports_fa_icon"
                            style="@style/HomeIcons"
                            android:text="@string/md_ic_reports" />

                        <TextView
                            style="@style/HomeIconText"
                            android:text="Reports" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/debug_icon"
                        android:orientation="vertical"
                        android:padding="25dp">

                        <TextView
                            android:id="@+id/debug_fa_icon"
                            style="@style/HomeIcons"
                            android:text="@string/md_ic_debug" />

                        <TextView
                            style="@style/HomeIconText"
                            android:text="Debug" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lock_icon"
                        android:orientation="vertical"
                        android:padding="25dp">

                        <TextView
                            android:id="@+id/lock_fa_icon"
                            style="@style/HomeIcons"
                            android:text="@string/md_ic_lock" />

                        <TextView
                            style="@style/HomeIconText"
                            android:text="Logout" />
                    </LinearLayout>


                </GridLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>