<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context=".member.MemberListActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        tools:context=".member.MemberListActivity">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:ignore="MergeRootFrame">

            <include layout="@layout/list_member" />

            <!--<android.support.design.widget.FloatingActionButton-->
                <!--android:id="@+id/fab"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="bottom|end"-->
                <!--android:layout_marginBottom="@dimen/fab_margin"-->
                <!--android:layout_marginEnd="@dimen/spacing_larger"-->
                <!--android:contentDescription="@string/add_member"-->
                <!--android:src="@drawable/ic_plus_person" />-->
        </FrameLayout>

        <FrameLayout
            android:id="@+id/member_details_view_pager_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:animateLayoutChanges="true"
            android:background="@color/gray_light"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/avatarMember"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerVertical="true"
                    android:background="@color/colorSeparatorLine"
                    android:contentDescription="@string/member_image"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/nameMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:ellipsize="marquee"
                    android:fontFamily="sans-serif-thin"
                    android:maxLines="1"
                    android:text="@string/name"
                    android:textSize="@dimen/font_huge" />

                <TextView
                    android:id="@+id/mobileMember"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/nameMember"
                    android:layout_below="@id/nameMember"
                    android:layout_marginEnd="90dp"
                    android:ellipsize="marquee"
                    android:fontFamily="sans-serif-thin"
                    android:maxLines="1"
                    android:text="@string/address"
                    android:textSize="@dimen/font_larger" />

                <TextView
                    android:id="@+id/lblAccountNumberInTitle"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-thin"
                    android:gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/font_extra_huge" />

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_alignStart="@id/lblAccountNumberInTitle"
                    android:layout_margin="@dimen/spacing_very_tiny"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:maxLines="1"
                    android:text="@string/accountNumber"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/font_smaller" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/spacing_very_tiny"
                    android:layout_toStartOf="@id/lblAccountNumberInTitle"
                    android:background="@color/colorSeparatorLine" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="75dp">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing_large"
                    android:layout_gravity="top"
                    app:tabSelectedTextColor="@color/black"
                    app:tabTextColor="@color/gray_dark" />

                <include
                    layout="@layout/member_details_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/spacing_large" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>