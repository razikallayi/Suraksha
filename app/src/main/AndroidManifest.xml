<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.razikallayi.suraksha">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:backupAgent=".SurakshaBackup"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Suraksha"
        android:windowActionBar="false"
        >

        <meta-data
            android:name="com.google.android.backup.api_key"
            android:value="AEdPqrEAAAAIXLdGA5rk3lp3lLaWC1PloaufdO7kqJZDike-Mg" />

        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"
                android:value=".member.memberListActivity" />
        </activity>
        <activity
            android:name=".member.RegisterMemberActivity"
            android:label="@string/title_register_member"
            android:parentActivityName=".member.MemberListActivity" />
        <activity
            android:name=".member.EditMemberActivity"
            android:label="@string/title_register_member"
            android:parentActivityName=".member.MemberDetailActivity" />
        <activity
            android:name=".officer.CreateOfficerActivity"
            android:label="@string/title_create_officer"
            android:parentActivityName=".officer.OfficerListActivity" />
        <activity
            android:name=".officer.EditOfficerActivity"
            android:label="@string/title_edit_officer"
            android:parentActivityName=".officer.OfficerListActivity" />
        <activity
            android:name=".officer.OfficerDetailActivity"
            android:parentActivityName=".officer.OfficerListActivity" />

        <provider
            android:name=".data.SurakshaProvider"
            android:authorities="com.razikallayi.suraksha"
            android:exported="false" />

        <activity
            android:name=".account.CreateAccountActivity"
            android:noHistory="true"
            android:parentActivityName=".member.MemberDetailActivity" />
        <activity
            android:name=".member.MemberListActivity"
            android:label="@string/title_member_list"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".member.MemberDetailActivity"
            android:label="@string/title_member_detail"
            android:parentActivityName=".member.MemberListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".member.MemberListActivity" />
        </activity>
        <activity
            android:name=".account.AccountDetailActivity"
            android:label="@string/title_account_detail" />
        <activity
            android:name=".dailyTxn.DailyTransactionActivity"
            android:label="@string/title_activity_daily_transaction"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity android:name=".DebugActivity" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".txn.TxnReportActivity"
            android:label="@string/title_activity_txn_report"
            android:parentActivityName=".HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HomeActivity" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".officer.OfficerListActivity"
            android:label="@string/title_officer_list"
            android:parentActivityName=".HomeActivity" />
    </application>

</manifest>